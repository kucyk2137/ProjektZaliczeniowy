@model Projekt.Models.UserProfile

<h2>Dodaj swoje dane</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Imię"></label>
        <input asp-for="Imię" class="form-control" />
        <span asp-validation-for="Imię" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Nazwisko"></label>
        <input asp-for="Nazwisko" class="form-control" />
        <span asp-validation-for="Nazwisko" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Adres"></label>
        <input asp-for="Adres" class="form-control" />
        <span asp-validation-for="Adres" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="KodPocztowy"></label>
        <input asp-for="KodPocztowy" class="form-control" />
        <span asp-validation-for="KodPocztowy" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Zapisz</button>
</form>
