@model Projekt.Models.Product

<h2>Potwierdź usunięcie produktu</h2>

<div>
    <h4>Jesteś pewien, że chcesz usunąć produkt?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nazwa
        </dt>
        <dd class="col-sm-10">
            @Model.Nazwa
        </dd>
        <dt class="col-sm-2">
            Opis
        </dt>
        <dd class="col-sm-10">
            @Model.Opis
        </dd>
        <dt class="col-sm-2">
            Cena
        </dt>
        <dd class="col-sm-10">
            @Model.Cena zł
        </dd>
        <dt class="col-sm-2">
            Zdjęcie
        <dd class="col-sm-10">
               <img src="/images/@Model.ImagePath" alt="Obecne zdjęcie" width="150" />           
        </dd>

    </dl>

    <form asp-action="Delete" asp-controller="Product" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Usuń produkt" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
        </div>
    </form>
</div>
